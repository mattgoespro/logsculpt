{
  "name": "logsculpt",
  "version": "0.0.1",
  "description": "Sculpt your own console logger with custom formatting options and colors.",
  "author": "mattgoespro",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild --platform=node --outdir=dist --format=esm --bundle lib/index.ts",
    "preprebuild": "tsc -p . --outfile ./dist/index.js",
    "lint": "eslint lib",
    "format": "prettier --write lib",
    "clean": "rimraf dist",
    "publish:dry-run": "npm publish --dry-run"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "esbuild": "^0.25.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript-eslint": "^8.26.0"
  }
}
